<project basedir="." default="Ruitest" name="rui">	<path id="rui.selenium.classpath">		<pathelement location="bin"/>		<pathelement location="libs/dom4j-1.6.1.jar"/>		<pathelement location="libs/jxl.jar"/>		<pathelement location="libs/selenium-server-standalone-2.42.2.jar"/>		<pathelement location="libs/junit.jar"/>		<pathelement location="libs/org.hamcrest.core_1.3.0.v201303031735.jar"/>		<pathelement location="libs/rt.jar"/>	</path>		<property name="report"   value="Report"/>	<property name="report.xml" value="${report}/selenium/xml"/> 	<property name="report.html" value="${report}/selenium/html"/>		<target name="ReadyForTest">		 <java classname="Rui.ReadyForTest">		 <classpath refid="rui.selenium.classpath"/>		 </java>	</target>		<target name="Ruitest" depends="ReadyForTest">  		<junit printsummary="yes" haltonfailure="no">			<classpath refid="rui.selenium.classpath"/>			<formatter type="xml"/>			<test name="Rui.Mummy" fork="yes" todir="${report.xml}"/>		</junit> 		<junitreport todir="${report.html}"> 			<fileset dir="${report.xml}"> 				<include name="*.xml"/> 			</fileset> 			<report format="frames" todir="${report.html}"/> 		</junitreport> 	</target></project>
